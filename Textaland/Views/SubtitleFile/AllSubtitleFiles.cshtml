@model IEnumerable<Textaland.Models.SubtitleFile>

@{
    ViewBag.Title = "AllSubtitleFiles";
}

<h2>Textaskrár</h2>

<p>
    <a href="/SubtitleFile/UploadFile" class="btn btn-default btn-sm">Hlaða upp nýrri skrá</a>
</p>
<table class="table table-hover table-striped table-bordered">
    <tr>
        <th>
            Nafn
        </th>
        <th>
            Tungumál
        </th>
        <th>
            Kvikmynd/Þáttur
        </th>
        <th>
            Sótt
        </th>
        <th>
            Einkunn
        </th>
        <th>
            Sent inn
        </th>
        <th>
            Fyrir heyrnaskerta
        </th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            <a href="/SubtitleFile/AboutSubtitleFile?id=@item.Id">@item._name</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._languageTo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._numOfDownloads)
        </td> 
        <td>
            @{
                if (item._rating == 0) {
                    @Html.Raw("Engin einkunn")
                } else {
                @item._rating.ToString("#.##")
                }   
            }
        </td>
        <td>
            @{
                string date = item._dateAdded.ToShortDateString();
                @Html.Raw(date)
            }
        </td>
        <td>
            @{
                if (@item._hearingImpaired == true){
                    @Html.Raw("Já")
                }
                else {
                    @Html.Raw("Nei")
                }
            }
        </td>
    </tr>


}

</table>

@{int count = @Model.Count();

  int numPages = count / 10 + 1;
    
}
  
<ul class="pagination pagination-sm">
    <li class="disabled"><a href="#">«</a></li>
    @for (int i = 1; i <= numPages; i++) { 
        <li>@Html.ActionLink(@i.ToString("#"), "AllSubtitleFiles", "SubtitleFile", new { num = i - 1 }, null)</li>
    }
    </ul>

