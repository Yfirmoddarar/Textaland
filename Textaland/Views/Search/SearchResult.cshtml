@model IEnumerable<Textaland.Models.SubtitleFile>

@{
    ViewBag.Title = "SearchResult";
}

<h2>SearchResult</h2>
@if (Model.Count() > 0) {
    <table class="table">
    <tr>
        <th>
            Nafn
        </th>
        <th>
            Þýtt úr
        </th>
        <th>
            Þýtt í
        </th>
        <th>
            Kvikmynd/Þáttur
        </th>
        <th>
            Sótt
        </th>
        <th>
            Einkunn
        </th>
        <th>
            Sent inn
        </th>
        <th>
            Fyrir heyrnaskerta
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item._name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._languageFrom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._languageTo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._numOfDownloads)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._rating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._dateAdded)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._hearingImpaired)
        </td>
    </tr>
}

</table>

}
else {
    <p>No results</p>
}
